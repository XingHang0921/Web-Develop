<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
         <h1>New</h1>
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div>
                <div>
                    <label class="form-label" for="title">Title: </label>
                    <input class="form-control" type="text" name="campground[title] id="title" placeholder="title"
                    value="<%= campground.title %>">>
                </div>
                <div>
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="campground[location]" id="location" placeholder="location"
                    value="<%=campground.location%>">>
                </div>
                <div>
                    <label class="form-label" for="image">Image URL: </label>
                    <input class="form-control" type="text" name="campground[image]" id="image" placeholder="image URL"
                    value="<%=campground.image%>">>    
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" name='campground[price]' id='price' class="form-control"
                    placeholder="0" aria-label="Amount (to the nearest dollar)" value="<%=campground.price%>">>
                    <span class="input-group-text">.00</span>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="description">
                        <%=campground.description%>
                    </textarea>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Submit</button>
                <br>
                <a href="/campgrounds/<%=campground._id%>">Back to Campground</a>
            </div>
        </form>
    </div>
</div>




