<% layout('layouts/boilerplate')%>
    <h1>All Campgrounds</h1>

<% for(let c of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=c.image%>" class="img-fluid">
                
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=c.title%>
                        </h5>
                        <h5 class="card-text">
                            <%=c.description%>
                        </h5>
                        <h5 class="card-text">
                            <small class="text-muted">
                                <%=c.location%>
                            </small>       
                        </h5>
                        <a href="/campgrounds/<%=c.id%>"class='btn btn-primary'>View <%=c.title%></a>
                    </div>
                </div>
            </div>
        </div>
<%}%>
