<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
         <h1>New</h1>
        <form action="/campgrounds" method="POST">
            <div>
                <label class="form-label" for="title">Title: </label>
                <input class="form-control" type="text" name="title" id="title" placeholder="title">
                <br>
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" name="location" id="location" placeholder="location">
                <br>
                <label class="form-label" for="image">Image URL: </label>
                <input class="form-control" type="text" name="image" id="image" placeholder="image URL">
                <br>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" name='price' id='price' class="form-control"
                    placeholder="0" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
                <div>
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" name="description" id="description" placeholder="description"></textarea>
                </div>
            </div>
            <div class="my-3">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>

</div>
